<div class="columns">
  <div class="column is-four-fifths">
    <div class="box">
      <%= link_to edit_poll_path(event.book_poll) do %>
        <h3 class="is-size-3"><%= event.name %></h3>
        <p class="call-to-action">Voting is open, click here to vote!</p>
        </br>
        <h4 class="is-size-4">Book options:</h4>
        <% if event.book_poll.user_book_votes %>
          <%= render "shared/book_options_list", books: event.book_poll.books %>
        <% else %>
          <p>TBD</p>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= link_to(
    event_path(event),
    method: :delete,
    data: {
      confirm: "Event #{event.name} and its associated polls and books will be removed
        forever. Are you sure?",
    },
    class: "button is-danger is-small is-rounded"
  ) do %>
      <span class="icon is-large">
        <i class="fas fa-times"></i>
      </span>
    <% end %>
</div>
