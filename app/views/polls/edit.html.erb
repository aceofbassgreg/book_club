<div class="container">
  <h2 class="title is-2"><%= @poll.name %></h2>
  <%= form_with model: @poll do |f| %>
    <table class="table">
      <% @poll.books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td>
            <div class="slidecontainer">
              <%= f.fields_for "user_book_votes[#{book.id}]" do |vote_form| %>
                <%= vote_form.range_field :score, min: 1, max: 100, step: 1, class: "selector"%>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
  </table>
  <%= f.submit class: "button is-success is-light is-rounded" %>
  <% end %>
</div>
